{% extends 'base.html.twig' %}

{% block body %}
    <h1>Highscores list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>User</th>
                <th>Score</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for highscore in highscores %}
            <tr>
                <td><a href="{{ path('highscore_show', { 'id': highscore.id }) }}">{{ highscore.id }}</a></td>
                <td>{{ highscore.user }}</td>
                <td>{{ highscore.score }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('highscore_show', { 'id': highscore.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('highscore_edit', { 'id': highscore.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('highscore_new') }}">Create a new highscore</a>
        </li>
    </ul>
{% endblock %}
